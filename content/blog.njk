---
layout: layouts/base.njk
---
<section class="container mx-auto pt-10 px-4 sm:px-6 md:px-8">
  <div class="mb-12">
    <h2 class="font-thinner tracking-wider flex w-full">
      <div class="text-4xl">Blog</div>
      <span class="border-b-4 border-slate-800 ml-2 flex-grow mb-2"></span>
    </h2>
    <div class="font-thin flex w-full">
      {# <div class="text-4xl text-transparent">Solutions</div> #}
      <p class="font-thin flex-grow ">Learn more about our services, philosophy, and resources.</p>
    </div>
  </div>
  <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-5 items-start mb-24">
    {% for post in collections.posts %}
      <article class="flex flex-col md:w-full h-full py-6 p-4 border border-slate-800 md:focus-within:ring ring-violet-300 md:hover:shadow-purple md:focus-within:shadow-purple transition-all relative rounded-2xl md:shadow-sm-purple">
        {# <img src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80" class="max-w-full md:max-w-none object-cover mb-8 rounded-xl" alt=""> #}
        <span class="flex items-center justify-between w-full text-[11px] font-[650] uppercase tracking-wider text-[#73739C]">
          <span class="truncate"> By Yosef Serkez </span>
          <div class="flex-1 bg-slate-100 h-px mx-2"></div>
          {# <span class="hidden xs:block"> 10&nbsp;min&nbsp;Read </span> #}
        </span>
        <h1 class="font-heading text-[1.4rem] font-semibold text-navy my-4">
          {{post.data.title | truncate(50, '...') | safe}}
        </h1>
        <p class="text-base line-clamp-3 mb-5">{{post.data.description}}</p>
        <p aria-hidden="true" class="text-slate-600 font-semibold mt-auto hover:underline underline-offset-2"> Read more&nbsp; <svg role="img" class="inline-flex opacity-50" style="pointer-events: none; width: 20px; height: auto;" viewBox="0 0 20 20" fill="currentColor">
            <g bufferred-rendering="static">
              <path d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"></path>
            </g>
          </svg>
        </p>
        <a href="{{post.url}}" class="opacity-0 absolute inset-0">
          <span class="sr-only"> Read more about {{post.title}}
          </span>
        </a>
      </article>
    {% endfor %}
  </div>
</section>

